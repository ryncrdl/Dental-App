<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inquire"
    tools:context=".Appointment.AppointmentFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="205dp"
        app:srcCompat="@drawable/iconwithname" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ellipse_1"
        android:onClick="goToProfile"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Book Appointment"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Please fill up the form"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/bg_button1"
        android:fontFamily="@font/poppins_bold"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_textbox1"
        android:ems="10"
        android:hint="Please select a date"
        android:inputType="date"
        android:padding="18dp"
        android:textColorHint="#B9B9B9"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_textbox1"
        android:ems="10"
        android:hint="Please select a service"
        android:inputType="text"
        android:padding="18dp"
        android:textColorHint="#B9B9B9"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_textbox1"
        android:ems="10"
        android:hint="Please select a doctor"
        android:inputType="text"
        android:padding="18dp"
        android:textColorHint="#B9B9B9"
        android:textSize="15sp" />

</RelativeLayout>