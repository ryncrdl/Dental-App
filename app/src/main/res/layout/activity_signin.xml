<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sign_in_screen_bg"
    tools:context=".SignIn.SignIn">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="205dp"
        app:srcCompat="@drawable/iconwithname" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Welcome To Dental App"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginRight="85dp"
        app:srcCompat="@drawable/phone_with_human" />

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_textbox1"
        android:ems="10"
        android:hint="Enter your username"
        android:inputType="text"
        android:padding="18dp"
        android:textColorHint="#B9B9B9"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_textbox1"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColorHint="#B9B9B9"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="625dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_button1"
        android:fontFamily="@font/poppins_bold"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="690dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="#019874"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/btn_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Dont have an account?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
    />


</RelativeLayout>